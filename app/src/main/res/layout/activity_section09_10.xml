<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.uen_po_hhs_fl.ui.Section09_10Activity" />

    </data>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.Section09_10Activity">

        <LinearLayout
            android:id="@+id/ll0910"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="@string/pocfsec9"
                android:textSize="40sp" />

            <android.support.v7.widget.CardView style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/pocfi01" />

                    <RadioGroup
                        android:id="@+id/pocfi01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/pocfi01a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:text="@string/yes" />

                        <RadioButton
                            android:id="@+id/pocfi01b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:text="@string/no" />


                    </RadioGroup>


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/pocfi02" />

                    <RadioGroup
                        android:id="@+id/pocfi02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/pocfi02a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:text="@string/yes" />

                        <RadioButton
                            android:id="@+id/pocfi02b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:text="@string/no" />


                    </RadioGroup>


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:text="@string/pocfsec9"
                android:textSize="40sp" />

            <android.support.v7.widget.CardView style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/pocfj01" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/pocfj01a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pocfj01a" />

                        <CheckBox
                            android:id="@+id/pocfj01b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pocfj01b" />

                        <CheckBox
                            android:id="@+id/pocfj01c"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pocfj01c" />

                        <CheckBox
                            android:id="@+id/pocfj01d"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pocfj01d" />

                        <CheckBox
                            android:id="@+id/pocfj01e"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pocfj01e" />

                        <CheckBox
                            android:id="@+id/pocfj01f"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pocfj01f" />

                        <CheckBox
                            android:id="@+id/pocfj01g"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pocfj01g" />

                        <CheckBox
                            android:id="@+id/pocfj01h"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pocfj01h" />

                        <CheckBox
                            android:id="@+id/pocfj01i"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pocfj01i" />

                        <CheckBox
                            android:id="@+id/pocfj01j"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pocfj01j" />

                        <CheckBox
                            android:id="@+id/pocfj01k"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pocfj01k" />

                        <CheckBox
                            android:id="@+id/pocfj01l"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pocfj01l" />

                        <CheckBox
                            android:id="@+id/pocfj01m"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pocfj01m" />

                        <CheckBox
                            android:id="@+id/pocfj01n"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/pocfj01n" />

                        <CheckBox
                            android:id="@+id/pocfj0196"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/other" />

                        <EditText
                            android:id="@+id/pocfj0196x"
                            style="@style/textInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZABCDEFGHIJKLMNOPQRSTUVWXYZ"
                            android:hint="@string/other"
                            android:text='@{pocfj0196.checked? pocfj0196x.getText.toString : "" }'
                            android:visibility='@{pocfj0196.checked? View.VISIBLE : View.GONE}' />

                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/pocfj0198"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/dkn" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/pocfj02" />

                    <RadioGroup
                        android:id="@+id/pocfj02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/pocfj02a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:text="@string/yes" />

                        <RadioButton
                            android:id="@+id/pocfj02b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="1dp"
                            android:text="@string/no" />


                    </RadioGroup>


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!--========================================================================================================-->


            <LinearLayout
                android:id="@+id/navbuttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible">

                <Button
                    android:id="@+id/btn_End"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/red"
                    android:text="@string/end_interview"
                    android:onClick='@{() -> callback.BtnEnd()}'
                    android:textColor="#ff1e1e"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_Continue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/green"
                    android:onClick='@{() -> callback.BtnContinue()}'
                    android:text="@string/start_interview"
                    android:textColor="#1ed61e" />

            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</layout>
