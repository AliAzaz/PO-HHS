<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.aku.hassannaqvi.uen_po_hhs_fl.ui.EndingActivity">

    <ScrollView
        android:id="@+id/scrollView01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:scrollbars="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/colorPrimary"
                android:text="@string/dcstatus"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white" />

            <RadioGroup
                android:id="@+id/istatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/istatus1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/istatus1" />

                <RadioButton
                    android:id="@+id/istatus2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/istatus2" />

                <RadioButton
                    android:id="@+id/istatus3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/istatus3" />

                <RadioButton
                    android:id="@+id/istatus4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/istatus4" />

                <RadioButton
                    android:id="@+id/istatus5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/istatus5" />

                <RadioButton
                    android:id="@+id/istatus6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/istatus6" />

                <RadioButton
                    android:id="@+id/istatus7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/istatus7" />

                <RadioButton
                    android:id="@+id/istatus8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/other" />

            </RadioGroup>

            <EditText
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ abcdefghijklmnopqrstuvwxyz"
                android:id="@+id/istatus888x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:hint="@string/other"
                android:inputType="textCapWords"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_End"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_weight="1"
                android:onClick="endInterview"
                android:text="@string/end_interview"
                android:textColor="#ff1e1e" />


        </LinearLayout>


    </ScrollView>

</RelativeLayout>
