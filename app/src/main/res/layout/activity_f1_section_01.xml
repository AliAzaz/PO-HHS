<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.F1Section01Activity">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.uen_po_hhs_fl.ui.F1Section01Activity" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll01"
            style="@style/linearlayout_view">

            <LinearLayout
                android:id="@+id/fldGrpSecA01"
                style="@style/linearlayout_view_wt_bound">

                <LinearLayout
                    android:id="@+id/fldGrpSecA02"
                    style="@style/linearlayout_view_wt_bound">

                    <!--pocfa01-->
                    <android.support.v7.widget.CardView style="@style/cardView">

                        <LinearLayout style="@style/linearlayout_view_wt_bound">

                            <TextView
                                style="@style/i_textview"
                                android:text="@string/pocfa01" />

                            <Spinner
                                android:id="@+id/pocfa01"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="20dp" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <!--pocfa02-->
                    <android.support.v7.widget.CardView style="@style/cardView">

                        <LinearLayout style="@style/linearlayout_view_wt_bound">

                            <TextView
                                style="@style/i_textview"
                                android:text="@string/pocfa02" />

                            <Spinner
                                android:id="@+id/pocfa02"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="20dp" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <!--pocfa03-->
                    <android.support.v7.widget.CardView style="@style/cardView">

                        <LinearLayout style="@style/linearlayout_view_wt_bound">

                            <TextView
                                style="@style/i_textview"
                                android:text="@string/pocfa03" />

                            <Spinner
                                android:id="@+id/pocfa03"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="20dp" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <!--pocfa04-->
                    <android.support.v7.widget.CardView style="@style/cardView">

                        <LinearLayout style="@style/linearlayout_view_wt_bound">

                            <TextView
                                style="@style/i_textview"
                                android:text="@string/pocfa04" />

                            <Spinner
                                android:id="@+id/pocfa04"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="20dp" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <!--pocfa05-->
                    <android.support.v7.widget.CardView style="@style/cardView">

                        <LinearLayout style="@style/linearlayout_view_wt_bound">

                            <TextView
                                style="@style/i_textview"
                                android:text="@string/pocfa05" />

                            <EditText
                                android:id="@+id/pocfa05"
                                style="@style/EditText"
                                android:hint="@string/pocfa05" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <!--Check HH button-->
                <android.support.v7.widget.CardView style="@style/cardView">

                    <LinearLayout style="@style/linearlayout_view_wt_bound">

                        <!--pocfa06-->
                        <android.support.v7.widget.CardView style="@style/cardView">

                            <LinearLayout style="@style/linearlayout_view_wt_bound">

                                <TextView
                                    style="@style/i_textview"
                                    android:text="@string/pocfa06" />

                                <com.edittextpicker.aliazaz.EditTextPicker
                                    android:id="@+id/pocfa06"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:digits="-abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789"
                                    android:hint="XXX-X"
                                    android:inputType="textCapWords"
                                    android:textColor="@color/colorPrimary"
                                    app:mask="XXX-X"
                                    app:pattern="[0-9]{3,3}-[^0-9]{1,1}"
                                    app:required="true"
                                    app:type="equal" />

                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <Button
                            android:id="@+id/checkHHBtn"
                            style="@style/Widget.AppCompat.Button.Colored"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/button_bg"
                            android:elevation="5dp"
                            android:text="CHECK"
                            android:textColor="@android:color/white"
                            android:textSize="18sp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:id="@+id/contactdetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/hh08"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@color/colorPrimaryDark"
                            android:gravity="left"
                            android:padding="5dp"
                            tools:text="XXXXX" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="2"
                            android:background="@color/colorPrimaryDark"
                            android:gravity="left"
                            android:padding="5dp"
                            android:text="Name of Household" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/hh09"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@color/colorPrimaryDark"
                            android:gravity="left"
                            android:padding="5dp"
                            tools:text="00000000000" />

                        <TextView
                            android:id="@+id/labelcontact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="2"
                            android:background="@color/colorPrimaryDark"
                            android:gravity="left"
                            android:padding="5dp"
                            android:text="Contact Number" />
                    </LinearLayout>

                    <!--pocfa07-->
                    <android.support.v7.widget.CardView style="@style/cardView">

                        <LinearLayout style="@style/linearlayout_view_wt_bound">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorPrimary"
                                android:text="@string/pocfa07"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="@android:color/white" />

                            <RadioGroup
                                android:id="@+id/pocfa07"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <RadioButton
                                    android:id="@+id/pocfa07a"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="1dp"
                                    android:text="@string/pocfa07a" />

                                <RadioButton
                                    android:id="@+id/pocfa07b"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="1dp"
                                    android:text="@string/pocfa07b" />

                                <RadioButton
                                    android:id="@+id/pocfa07c"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="1dp"
                                    android:text="@string/pocfa07c" />

                                <RadioButton
                                    android:id="@+id/pocfa07d"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="1dp"
                                    android:text="@string/pocfa07d" />

                                <RadioButton
                                    android:id="@+id/pocfa07e"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="1dp"
                                    android:text="@string/pocfa07e" />

                                <RadioButton
                                    android:id="@+id/pocfa07f"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="1dp"
                                    android:text="@string/pocfa07f" />

                                <RadioButton
                                    android:id="@+id/pocfa0796"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="1dp"
                                    android:text="@string/other" />

                                <EditText
                                    android:id="@+id/pocfa0796x"
                                    style="@style/textInput"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZABCDEFGHIJKLMNOPQRSTUVWXYZ"
                                    android:hint="@string/other"
                                    android:tag="pocfa0796"
                                    android:text='@{pocfa0796.checked? pocfa0796x.getText.toString : "" }'
                                    android:visibility='@{pocfa0796.checked? View.VISIBLE : View.GONE}' />

                            </RadioGroup>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <!--pocfa08-->
                    <android.support.v7.widget.CardView style="@style/cardView">

                        <LinearLayout style="@style/linearlayout_view_wt_bound">

                            <TextView
                                style="@style/i_textview"
                                android:text="@string/pocfa08" />

                            <EditText
                                android:id="@+id/pocfa08"
                                style="@style/EditTextAlphaNumeric"
                                android:inputType="textCapCharacters"
                                android:hint="@string/pocfa08" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <!--pocfa09-->
                    <android.support.v7.widget.CardView style="@style/cardView">

                        <LinearLayout style="@style/linearlayout_view_wt_bound">

                            <TextView
                                style="@style/i_textview"
                                android:text="@string/pocfa09" />

                            <EditText
                                android:id="@+id/pocfa09"
                                style="@style/EditText"
                                android:hint="@string/pocfa09" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <!--pocfa10-->
                    <android.support.v7.widget.CardView style="@style/cardView">

                        <LinearLayout style="@style/linearlayout_view_wt_bound">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorPrimary"
                                android:text="@string/pocfa10"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="@android:color/white" />

                            <RadioGroup
                                android:id="@+id/pocfa10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <RadioButton
                                    android:id="@+id/pocfa10a"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="1dp"
                                    android:text="@string/pocfa10a" />

                                <RadioButton
                                    android:id="@+id/pocfa10b"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="1dp"
                                    android:text="@string/pocfa10b" />

                            </RadioGroup>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <!--pocfa11-->
                    <android.support.v7.widget.CardView style="@style/cardView">

                        <LinearLayout style="@style/linearlayout_view_wt_bound">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorPrimary"
                                android:text="@string/pocfa11"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="@android:color/white" />

                            <RadioGroup
                                android:id="@+id/pocfa11"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <RadioButton
                                    android:id="@+id/pocfa11a"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="1dp"
                                    android:text="@string/pocfa11a" />

                                <RadioButton
                                    android:id="@+id/pocfa11b"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="1dp"
                                    android:text="@string/pocfa11b" />

                            </RadioGroup>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <!--pocfa12-->
                    <android.support.v7.widget.CardView
                        style="@style/cardView"
                        android:visibility='@{pocfa11a.checked ? View.VISIBLE : View.GONE}'>

                        <LinearLayout style="@style/linearlayout_view_wt_bound">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorPrimary"
                                android:text="@string/pocfa12"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="@android:color/white" />

                            <io.blackbox_vision.datetimepickeredittext.view.DatePickerInputEditText
                                android:id="@+id/pocfa12"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusable="false"
                                android:hint="DD/MM/YYYY"
                                android:text='@{pocfa11a.checked ? pocfa12.getText.toString : ""}'
                                android:textColor="@android:color/black"
                                app:dateFormat="dd-MM-yyyy"
                                app:maxDate="CR_DATE"
                                app:minDate="01/01/1981" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <!--pocfa13-->
                    <android.support.v7.widget.CardView
                        style="@style/cardView"
                        android:visibility='@{pocfa11b.checked ? View.VISIBLE : View.GONE}'>

                        <LinearLayout style="@style/linearlayout_view_wt_bound">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorPrimary"
                                android:text="@string/pocfa13"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="@android:color/white" />

                            <EditText
                                android:id="@+id/pocfa13"
                                style="@style/EditText_number"
                                android:hint="@string/pocfa13"
                                android:text='@{pocfa11b.checked ? pocfa13.getText.toString : ""}' />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <!--pocfa14-->
                    <android.support.v7.widget.CardView style="@style/cardView">

                        <LinearLayout style="@style/linearlayout_view_wt_bound">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorPrimary"
                                android:text="@string/pocfa14"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="@android:color/white" />

                            <RadioGroup
                                android:id="@+id/pocfa14"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <RadioButton
                                    android:id="@+id/pocfa14a"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="1dp"
                                    android:text="@string/yes" />

                                <RadioButton
                                    android:id="@+id/pocfa14b"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="1dp"
                                    android:text="@string/no" />

                                <RadioButton
                                    android:id="@+id/pocfa14c"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="1dp"
                                    android:text="@string/pocfa14c" />

                            </RadioGroup>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/navbuttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal"
                android:visibility="visible"
                tools:visibility="visible">

                <Button
                    android:id="@+id/btn_End"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/red"
                    android:onClick='@{() -> callback.BtnEnd()}'
                    android:text="@string/end_interview"
                    android:textColor="#ff1e1e" />

                <Button
                    android:id="@+id/btn_Continue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/green"
                    android:onClick='@{() -> callback.BtnContinue()}'
                    android:text="@string/start_interview"
                    android:textColor="#1ed61e" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</layout>