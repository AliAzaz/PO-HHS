<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.Form03">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.uen_po_hhs_fl.ui.Form03" />

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dullWhile">

        <LinearLayout
            android:id="@+id/llform03"
            style="@style/linearlayout_view">

            <TextView
                style="@style/textview_fm_lst_h"
                android:text="@string/pofisec1" />

            <!--pofi02-->
            <android.support.v7.widget.CardView style="@style/cardView">

                <LinearLayout
                    style="@style/linearlayout_view">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/pofi02"/>

                    <RadioGroup
                        android:id="@+id/pofi02"
                        style="@style/i_radiogroup">

                        <RadioButton
                            android:id="@+id/pofi02a"
                            style="@style/i_radiobutton"
                            android:text="@string/yes" />

                        <RadioButton
                            android:id="@+id/pofi02b"
                            style="@style/i_radiobutton"
                            android:text="@string/no" />

                        <EditText
                            android:id="@+id/pofi02bx"
                            style="@style/EditText"
                            android:hint="@string/pofi02bx"
                            android:tag="pofi02b"
                            android:text='@{pofi02b.checked? pofi02bx.getText.toString : "" }'
                            android:visibility='@{pofi02b.checked? View.VISIBLE : View.GONE}' />


                    </RadioGroup>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <!--pofi03-->
            <android.support.v7.widget.CardView style="@style/cardView">

                <LinearLayout
                    style="@style/linearlayout_view">

                    <TextView
                        style="@style/i_textview"
                        android:text="@string/pofi03"/>

                    <RadioGroup
                        android:id="@+id/pofi03"
                        style="@style/i_radiogroup">

                        <RadioButton
                            android:id="@+id/pofi03a"
                            style="@style/i_radiobutton"
                            android:text="@string/yes" />

                        <RadioButton
                            android:id="@+id/pofi03b"
                            style="@style/i_radiobutton"
                            android:text="@string/no" />

                        <EditText
                            android:id="@+id/pofi03bx"
                            style="@style/EditText"
                            android:hint="@string/pofi02bx"
                            android:tag="pofi03b"
                            android:text='@{pofi03b.checked? pofi03bx.getText.toString : "" }'
                            android:visibility='@{pofi03b.checked? View.VISIBLE : View.GONE}' />


                    </RadioGroup>

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <!--  = = = = =  END OF FORM FIELDS  = = = = = -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="32dp">

                <Button
                    android:id="@+id/btnEnd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@android:color/holo_red_light"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="@string/end_interview"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnNext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@android:color/holo_green_light"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="@string/nextSection"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>
